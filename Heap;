#include <bits/stdc++.h>

void insert(int a[] , int n)
{
  int i = n , temp;
  temp = a[i];
  while (i > 1 && temp > a[i / 2])
  {
    a[i] = a[i / 2];
    i = i / 2;
  }
  a[i] = temp;
}
int Delete(int a[] , int n)
{
  int i = 1 , temp, j = 2 * i;
  int val = a[i];
  int x = a[n];
  a[1] = a[n];
  a[n] = val;
  while (j <= n - 1)
  {
    if (a[j + 1] > a[j] && j <= n - 1)
    {
      j = j + 1;
    }
    if (a[i] < a[j])
    {
      temp = a[i];
      a[i] = a[j];
      a[j] = temp;
      i = j;
      j = 2 * i;
    }
    else
    {
      break;
    }
    return val;
  }
}
int main()
{
  int a[] = {0, 14, 15, 5, 20, 30, 8, 40};
  int i;
  for ( i = 2 ; i <= 7 ; i++)
  {
    insert(a , i);
  }
  //printf("%d\n",Delete(a,7));//delete a root node (remaimber only root node is deleted from Heap)
  for (i = 7 ; i <= 1 ; i++)
  {
    Delete(a, i);
  }
  for ( i = 1 ; i < 7 ; i++)
  {
    printf("%d ", a[i]);
  }
}
